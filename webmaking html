    <script>
        // ëª¨ë‹¬ ì—´ê¸°
        function openModal(type) {
            const modalMap = {
                'donation': 'donationModal',
                'volunteer': 'volunteerModal',
                'event': 'eventModal'
            };
            const modalId = modalMap[type];
            if (modalId) {
                document.getElementById(modalId).style.display = 'block';
                document.body.style.overflow = 'hidden'; // ìŠ¤í¬ë¡¤ ë°©ì§€
            }
        }

        // ëª¨ë‹¬ ë‹«ê¸°
        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
            document.body.style.overflow = 'auto'; // ìŠ¤í¬ë¡¤ ë³µì›
        }

        // ëª¨ë‹¬ ì™¸ë¶€ í´ë¦­ì‹œ ë‹«ê¸°
        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        }

        // í›„ì› ì‹ ì²­ ì œì¶œ
        function submitDonation(event) {
            event.preventDefault();
            alert('í›„ì› ì‹ ì²­ì´ ì ‘ìˆ˜ë˜ì—ˆìŠµë‹ˆë‹¤!\n\në‹´ë‹¹ìê°€ í™•ì¸ í›„ ì—°ë½ë“œë¦¬ê² ìŠµë‹ˆë‹¤.\nê°ì‚¬í•©ë‹ˆë‹¤.');
            closeModal('donationModal');
            event.target.reset();
        }

        // ìì›ë´‰ì‚¬ ì‹ ì²­ ì œì¶œ
        function submitVolunteer(event) {
            event.preventDefault();
            alert('ìì›ë´‰ì‚¬ ì‹ ì²­ì´ ì ‘ìˆ˜ë˜ì—ˆìŠµë‹ˆë‹¤!\n\në‹´ë‹¹ìê°€ í™•ì¸ í›„ ì—°ë½ë“œë¦¬ê² ìŠµë‹ˆë‹¤.\ní•¨ê»˜í•´ì£¼ì…”ì„œ ê°ì‚¬í•©ë‹ˆë‹¤.');
            closeModal('volunteerModal');
            event.target.reset();
        }

        // ì´ë²¤íŠ¸ ì°¸ê°€ ì‹ ì²­ ì œì¶œ
        function submitEvent(event) {
            event.preventDefault();
            alert('ì´ë²¤íŠ¸ ì°¸ê°€ ì‹ ì²­ì´ ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤!\n\nì¼ì •ê³¼ ì¥ì†Œë¥¼ ë‹¤ì‹œ í•œë²ˆ í™•ì¸í•´ì£¼ì„¸ìš”.\në§ì€ ì°¸ì—¬ ë¶€íƒë“œë¦½ë‹ˆë‹¤!');
            closeModal('eventModal');
            event.target.reset();
        }

        // SNS ê³µìœ 
        function shareToSNS() {
            const shareText = 'ì‹ ì„±ë²” ì˜ì›ê³¼ í•¨ê»˜ ë” ë‚˜ì€ ì§€ì—­ì‚¬íšŒë¥¼ ë§Œë“¤ì–´ê°‘ë‹ˆë‹¤! #êµ­ë¯¼ì˜ë²„ë¯¸ì™€í•¨ê»˜ #ì‹ ì„±ë²”';
            const shareUrl = window.location.href;
            
            if (navigator.share) {
                navigator.share({
                    title: 'êµ­ë¯¼ì˜ ë²„ë¯¸ì™€ í•¨ê»˜',
                    text: shareText,
                    url: shareUrl
                }).then(() => {
                    alert('ê³µìœ í•´ì£¼ì…”ì„œ ê°ì‚¬í•©ë‹ˆë‹¤!');
                }).catch(() => {
                    fallbackShare(shareText, shareUrl);
                });
            } else {
                fallbackShare(shareText, shareUrl);
            }
        }

        // SNS ê³µìœ  ëŒ€ì²´ ë°©ë²•
        function fallbackShare(text, url) {
            const message = `${text}\n${url}`;
            const tempInput = document.createElement('textarea');
            tempInput.value = message;
            document.body.appendChild(tempInput);
            tempInput.select();
            document.execCommand('copy');
            document.body.removeChild(tempInput);
            alert('ê³µìœ  ë§í¬ê°€ í´ë¦½ë³´ë“œì— ë³µì‚¬ë˜ì—ˆìŠµë‹ˆë‹¤!\nSNSì— ë¶™ì—¬ë„£ê¸° í•´ì£¼ì„¸ìš”.');
        }

        // ë‰´ìŠ¤ë ˆí„° êµ¬ë…
        function subscribeNewsletter() {
            const email = event.target.previousElementSibling.value;
            if (email && email.includes('@')) {
                alert('ë‰´ìŠ¤ë ˆí„° êµ¬ë…ì´ ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤!\nìµœì‹  ì†Œì‹ì„ ì´ë©”ì¼ë¡œ ë³´ë‚´ë“œë¦¬ê² ìŠµë‹ˆë‹¤.');
                event.target.previousElementSibling.value = '';
            } else {
                alert('ì˜¬ë°”ë¥¸ ì´ë©”ì¼ ì£¼ì†Œë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.');
            }
        }

        // ìŠ¤ë¬´ìŠ¤ ìŠ¤í¬ë¡¤
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // ìŠ¤í¬ë¡¤ ì• ë‹ˆë©”ì´ì…˜
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animation = 'fadeInUp 0.8s ease-out';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.promise-card, .event-card, .support-card').forEach(el => {
            observer.observe(el);
        });
    </script>
